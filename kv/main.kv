<Button>:
    background_normal: ''
    background_down: ''
    background_color: 0, 0, 0, 0
    color: 0.25, 0.15, 0.10, 1
    padding: dp(12), dp(10)
    font_size: "20sp"
    bold: True
    canvas.before:
        # UmbrƒÉ principalƒÉ profundƒÉ (jos) - efect 3D
        Color:
            rgba: 0, 0, 0, 0.45
        RoundedRectangle:
            pos: self.x + dp(4), self.y - dp(6)
            size: self.width - dp(8), self.height
            radius: [dp(16), dp(16), dp(16), dp(16)]
        # UmbrƒÉ secundarƒÉ (mai subtilƒÉ)
        Color:
            rgba: 0, 0, 0, 0.25
        RoundedRectangle:
            pos: self.x + dp(2), self.y - dp(3)
            size: self.width - dp(4), self.height + dp(2)
            radius: [dp(16), dp(16), dp(16), dp(16)]
        # Gradient base (simulat cu douƒÉ straturi)
        # Strat inferior (mai √Ænchis)
        Color:
            rgba: 0.82, 0.77, 0.67, 1
        RoundedRectangle:
            pos: self.x + dp(2), self.y + dp(2)
            size: self.width - dp(4), self.height - dp(4)
            radius: [dp(16), dp(16), dp(16), dp(16)]
        # Strat superior (mai deschis - efect gradient)
        Color:
            rgba: 1.0, 0.96, 0.88, 1
        RoundedRectangle:
            pos: self.x + dp(3), self.y + dp(4)
            size: self.width - dp(6), self.height - dp(6)
            radius: [dp(16), dp(16), dp(16), dp(16)]
        # Highlight (iluminare de sus) - efect 3D puternic
        Color:
            rgba: 1, 1, 1, 0.35
        RoundedRectangle:
            pos: self.x + dp(3), self.y + self.height * 0.7
            size: self.width - dp(6), self.height * 0.3
            radius: [dp(16), dp(16), 0, 0]
    canvas.after:
        # Glow exterior (mai slab) - efect neon
        Color:
            rgba: 0.05, 0.78, 1, 0.3
        Line:
            width: dp(6)
            rounded_rectangle: (self.x - dp(2), self.y - dp(2), self.width + dp(4), self.height + dp(4), dp(16), dp(16), dp(16), dp(16))
        # Contur neon principal
        Color:
            rgba: 0.05, 0.78, 1, 1
        Line:
            width: dp(3.5)
            rounded_rectangle: (self.x, self.y, self.width, self.height, dp(16), dp(16), dp(16), dp(16))
        # Glow interior (highlight) - efect 3D
        Color:
            rgba: 0.2, 0.9, 1.0, 0.7
        Line:
            width: dp(2)
            rounded_rectangle: (self.x + dp(3), self.y + dp(3), self.width - dp(6), self.height - dp(6), dp(14), dp(14), dp(14), dp(14))

