<Button>:
    background_normal: ''
    background_down: ''
    background_color: 0.94, 0.96, 1, 1
    color: 0.08, 0.12, 0.22, 1
    padding: dp(10), dp(8)
    canvas.before:
        # subtle drop shadow for 3D effect
        Color:
            rgba: 0, 0, 0, 0.25
        RoundedRectangle:
            pos: self.x + dp(1), self.y - dp(2)
            size: self.width - dp(2), self.height + dp(3)
            radius: [dp(12), dp(12), dp(12), dp(12)]
        # main face
        Color:
            rgba: self.background_color
        RoundedRectangle:
            # inset to keep face inside the neon border
            pos: self.x + dp(2), self.y + dp(2)
            size: self.width - dp(4), self.height - dp(4)
            radius: [dp(12), dp(12), dp(12), dp(12)]
    canvas.after:
        # neon outline
        Color:
            rgba: 0.05, 0.78, 1, 1
        Line:
            width: dp(3)
            rounded_rectangle: (self.x, self.y, self.width, self.height, dp(12), dp(12), dp(12), dp(12))

ScreenManager:
    id: screen_manager
    transition: FadeTransition(duration=0.3)
